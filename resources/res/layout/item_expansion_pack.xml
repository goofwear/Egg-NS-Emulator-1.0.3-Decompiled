<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20mm">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="35mm" android:textColor="@color/black" android:id="@+id/fileName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        <View android:background="@color/gray" android:layout_width="wrap_content" android:layout_height="1mm" android:layout_marginTop="10mm" android:layout_below="@+id/fileName" android:layout_alignStart="@+id/fileName" android:layout_alignEnd="@+id/fileName"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/checkbox_layout" android:layout_width="44mm" android:layout_height="44mm" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <ImageView android:layout_gravity="center" android:id="@+id/checkbox" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/pop_icon_input_nomal" android:scaleType="fitXY"/>
    </FrameLayout>
</LinearLayout>
