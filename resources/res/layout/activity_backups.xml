        <TextView android:textSize="@dimen/font_big" android:textColor="@color/item_color_selector" android:tag="binding_3" android:background="@drawable/item_selector" android:paddingBottom="20mm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="100mm" android:text="@string/user_have_backups" android:layout_below="@+id/btn_back" android:paddingStart="20mm" android:paddingEnd="20mm"/>
